{
  "name": "frank-the-collie",
  "description": "A website for our dog Frank",
  "version": "0.0.1",
  "scripts": {
    "dev": "sapper dev --no-hot",
    "start": "sapper dev --no-hot",
    "watch:tailwind": "postcss static/tailwind.css -o static/index.css -w",
    "build:tailwind": "NODE_ENV=production postcss static/tailwind.css -o static/index.css",
    "build": "npm run build:tailwind && sapper build --legacy",
    "export-gh": "npm run build:tailwind && BASE_PATH=\"frank-the-collie\" sapper export --basepath 'frank-the-collie'",
    "start-build": "node __sapper__/build",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "run-p --race dev cy:run"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "axios": "^0.21.1",
    "compression": "^1.7.1",
    "moment": "^2.24.0",
    "polka": "next",
    "postcss-cli": "^6.1.3",
    "sirv": "^0.4.0",
    "tailwindcss": "^1.1.2"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "sapper": "^0.29.1",
    "svelte": "^3.0.0",
    "svelte-loader": "^2.9.0",
    "webpack": "^4.7.0"
  }
}
